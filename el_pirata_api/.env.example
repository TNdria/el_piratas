# =========================================================
# CONFIGURATION D'APPLICATION
# Ces valeurs sont définies dans les variables Render
# APP_ENV doit être 'production' pour la sécurité.
# =========================================================
APP_NAME="el_pirata"
APP_ENV=production
APP_KEY=base64:89Lby2dKGEfKe915dIiQDpd6FnTGJFSsQHGpjeMZyNk=
APP_DEBUG=false
APP_URL=https://backend-ubov.onrender.com 

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# =========================================================
# CONFIGURATION DE LA BASE DE DONNÉES (PostgreSQL)
# Laissez ces variables pointées vers pgsql.
# L'URL de connexion est fournie par la variable DATABASE_URL de Render
# =========================================================
DB_CONNECTION=pgsql
# DB_HOST, DB_PORT, DB_DATABASE, DB_USERNAME, DB_PASSWORD ne sont pas nécessaires
# car Laravel utilise DATABASE_URL si elle est définie (ce que fait Render).

# =========================================================
# SESSIONS, CACHE, QUEUE
# Laissez 'database' pour que la migration crée les tables.
# =========================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

# =========================================================
# MAIL/SERVICES EXTERNES
# Laissez 'log' par défaut si vous n'avez pas de service email configuré.
# =========================================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Le reste des services (Redis, AWS, etc.) reste inchangé si vous ne les utilisez pas.